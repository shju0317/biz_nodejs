extends layout

block content
    link(rel="stylesheet", href="/stylesheets/todo_main.css")
    script(src="/javascripts/todo_main.js")
    //- script.
    //-     var todo_data =""
    //-     todo_data = `!{todo_data}`
    script(src="/javascripts/todo_sub.js")

    section.todo_main
        h1(id="main_title", onclick="main_title_click()") My ToDo List
        form(method="POST" action="/insert")
            input(type="text", name="todo", id="todo", placeholder="할 일")
            button(type="button", id="btn-save") 저장
        article.todo_list
            ul
                each todoVO in todoList
                    li= todoVO.to_text
                        span= todoVO.to_date
                        span= todoVO.to_time
                        div
                            button(type="button", id="btn-update" data-id=todoVO._id) 수정
                            button(type="button", id="btn-delete" data-id=todoVO._id) 삭제